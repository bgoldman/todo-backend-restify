{
  "name": "todo-backend-restify",
  "version": "0.1.0",
  "description": "An implementation of Todo Backend using Restify.",
  "main": "server.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/bgoldman/todo-backend-restify"
  },
  "author": "Brandon Goldman",
  "license": "MIT",
  "readmeFilename": "README.md",
  "dependencies": {
    "babel-cli": "^6.5.1",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "config": "^1.19.0",
    "forever": "^0.15.1",
    "lodash": "^4.5.1",
    "pg": "^4.4.6",
    "restify": "^4.0.3",
    "sequelize": "^3.19.3",
    "sequelize-cli": "^2.3.1",
    "sqlite3": "^3.1.1",
    "superagent": "^1.7.2"
  },
  "devDependencies": {
    "aglio": "^2.2.0",
    "dredd": "^1.0.5",
    "markdown-live": "^1.0.8",
    "nodemon": "^1.8.1",
    "sqlite3": "^3.1.1"
  },
  "engines": {
    "node": "^5.6.0"
  },
  "scripts": {
    "start": "nodemon server.js --ignore _build --exec babel-node",
    "build": "npm run build:clean && npm run build:js",
    "build:clean": "rm -rf _build && mkdir _build",
    "build:js": "babel . --ignore=node_modules --out-dir=_build --source-maps=inline --copy-files",
    "db:migrate": "npm run build && sequelize db:migrate --config=_build/src/lib/database/cli-config.js",
    "db:migrate:undo": "npm run build && sequelize db:migrate:undo --config=_build/src/lib/database/cli-config.js",
    "db:migration:create": "npm run build && sequelize migration:create --config=_build/src/lib/database/cli-config.js",
    "postinstall": "npm run build",
    "preview:api-docs": "(sleep 3 && open http://localhost:4000) & aglio --input=api-spec.apib --theme-variables=streak --theme-template=triple --server --port=4000",
    "preview:readme": "mdlive *.md",
    "production:db:migrate": "heroku run npm run db:migrate",
    "production:db:migrate:undo": "heroku run npm run db:migrate:undo",
    "production:start": "cd _build && forever --minUptime=1000 --spinSleepTime=1000 server.js",
    "test": "npm run build && npm run test:integrations",
    "test:integrations": "dredd --language=nodejs --server='node _build/server.js' --hookfiles=_build/tests/integration/dredd-hooks.js api-spec.apib http://localhost:3000"
  }
}
